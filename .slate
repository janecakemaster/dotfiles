# Config
config defaultToCurrentScreen true
checkDefaultsOnLoad true
orderScreensLeftToRight true


# Shows app icons and background apps, spreads icons in the same place.
config windowHintsShowIcons true 
config windowHintsIgnoreHiddenWindows false

# Keys
alias hyper ctrl;shift;alt;cmd
alias ctrlcmd ctrl;cmd

# Bindings

bind e:${ctrlcmd} hint ASDFGHJKL

# App bindings
bind b:${hyper} focus 'Slack'
bind c:${hyper} focus 'Google Chrome'
bind f:${hyper} focus 'Finder'
bind g:${hyper} focus 'Safari'
bind i:${hyper} focus 'iTerm'
bind m:${hyper} focus 'Mail'
bind n:${hyper} focus 'Sonos'
bind o:${hyper} focus 'iOS Simulator'
bind p:${hyper} focus 'Preview'
bind r:${hyper} focus 'Sunrise Calendar'
bind s:${hyper} focus 'Sublime Text'
bind w:${hyper} focus 'TweetDeck'
bind x:${hyper} focus 'Radiant Player'
bind y:${hyper} focus 'YNAB 4'

